{
  "name": "toast-react-email",
  "version": "0.1.0",
  "private": true,
  "main": "./server/createEmail.js",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "browser-sync": "^2.26.13",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0"
  },
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir .build && node internal/index.js",
    "build:transpile": "NODE_ENV=development babel src --watch --out-dir .build",
    "build:html": "nodemon internal/index.js -e js,css",
    "build:reload": "browser-sync start -s 'public' -f 'public'",
    "dev": "yarn build:transpile & yarn build:html & yarn build:reload"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "volta": {
    "node": "12.16.3",
    "yarn": "1.22.4"
  }
}
